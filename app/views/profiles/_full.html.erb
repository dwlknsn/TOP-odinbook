<div id="<%= dom_id(profile) %>-full" class="flex flex-col gap">
  <div class="card border-dark">
    <%= render partial: "profiles/personal_details", locals: { profile: profile } %>
  </div>
  <% if current_user == profile.user %>
    <%= render partial: "followings/followings", locals: { followings: followings } %>
    <%= render partial: "posts/tabbed_posts", locals: { posts: profile.user.authored_posts, title: "Posts", variant: :preview }  %>
  <% else %>
    <%= render partial: "posts/posts", locals: { posts: profile.user.authored_posts.published, title: "Posts", variant: :preview }  %>
  <% end %>
</div>
