<div class="flex flex-col gap">
  <h2 class="text-3xl">Log in</h2>
  <div style="width: 50%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "flex flex-col gap"}) do |f| %>
      <div class="field flex flex-col gap-half items-start">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", size: "20" %>
      </div>
      <div class="field flex flex-col gap-half items-start">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input", size: "20" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field flex flex-col gap-half items-start">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn--primary" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
