<div class="flex flex-col gap items-center">
  <div style="min-width: clamp(300px, 45%, 400px)">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "flex flex-col gap"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, hidden: true %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", size: "20", placeholder: "email" %>
      </div>
      <div class="field flex flex-col items-end">
        <%= f.label :password, hidden: true %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input", size: "20", placeholder: "password" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-subtle">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="field flex flex-col items-end">
        <%= f.label :password_confirmation, hidden: true %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", size: "20", placeholder: "password confirmation" %>
      </div>
      <div class="actions flex flex-col gap items-center">
        <%= f.submit "Sign up", class: "btn btn--primary", style: "min-width: clamp(150px, 50%, 400px)" %>
      </div>
    <% end %>
  </div>
</div>
<div class="flex items-center gap m-10">
  <hr class="grow border" aria-hidden="true">
  <div class="text-subtle">or</div>
  <hr class="grow border" aria-hidden="true">
</div>
<div class="flex justify-center">
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign up with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn--secondary border border-dark" %>
  <% end %>
</div>
