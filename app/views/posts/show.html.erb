<div class="flex flex-col gap" data-controller="commentable animation">
  <%= render @post %>
  <div class="flex justify-end items-center gap">
    <%= link_to(post_comments_path(@post), class: "btn btn--secondary border-dark",
        data: { turbo_frame: "comments-for-#{dom_id(@post)}", action: "click->animation#spin" }) do %>
      <%= image_tag("icons/refresh.svg", size: 32, aria: { hidden: true }, class: "colorize-black refresh-icon",
        data: { animation_target: "refreshIcon" }) %>
      <em>Refresh Comments</em>
    <% end %>
  </div>
  <%= render partial: "comments/form", locals: { commentable: @post, comment: Comment.new } %>
  <%= render partial: "comments/comments", locals: { comments: @post.comments.order(id: :desc), commentable: @post } %>
</div>
