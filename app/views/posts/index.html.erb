<% content_for :title, "Posts" %>
<div>
  <%= link_to "Create Post", new_post_path, class: "btn btn--primary" %>
</div>
<div class="flex flex-col gap bg-shadeborder-dark" data-controller="tabs">
  <div class="tabs__list border" data-action="keydown.left->tabs#prev keydown.right->tabs#next" role="tablist">
    <button id="trigger_followed"  class="btn btn--tab border-dark" data-tabs-target="button" data-action="tabs#select" role="tab" aria-controls="tab_followed">My Feed</button>
    <button id="trigger_discover" class="btn btn--tab border-dark" data-tabs-target="button" data-action="tabs#select" role="tab" aria-controls="tab_discover">Discover</button>
  </div>
  <div>
    <div hidden id="tab_followed" data-tabs-target="tab" role="tabpanel" tabindex="0" aria-labelledby="trigger_followed", class="flex flex-col gap">
      <%= render partial: "preview", collection: @my_posts, as: :post  %>
    </div>
    <div hidden id="tab_discover" data-tabs-target="tab" role="tabpanel" tabindex="0" aria-labelledby="trigger_discover", class="flex flex-col gap">
      <%= render partial: "preview", collection: @discoverable_posts, as: :post  %>
    </div>
  </div>
</div>
