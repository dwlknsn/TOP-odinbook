<div id="<%= dom_id post %>">
  <p>
    <strong>Author:</strong>
    <%= post.author.display_name %> (@<%= post.author.username %> )
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= post.status %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

</div>
